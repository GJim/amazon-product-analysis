LOG_LEVEL=INFO

# Analysis limits
MAX_PRODUCTS_TO_ANALYZE=5
MAX_REVIEWS_PER_PRODUCT=20
MAX_PRODUCT_LIMIT_DB=10
MAX_COMPETITIVE_LIMIT_DB=5
MAX_SCRAPE_ATTEMPTS=20

